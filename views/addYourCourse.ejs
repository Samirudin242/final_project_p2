<%- include('partials/header')  %>

<div class="container">
    <br>
    <h2 class="text-center">Add Course Form</h2>
    <br>
    <form action="/addcourse" method="post">
        <div class="form-group">
            <label for="exampleFormControlSelect1">Student</label>
            <select class="form-control" id="exampleFormControlSelect1" name="studentId">
                <option selected> -- Choose --</option>
                <% student.forEach(student =>{ %>
                <option value="<%=student.id%>"><%= student.first_name + ' '+ student.last_name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Course Name</label>
            <select class="form-control" id="exampleFormControlSelect1" name="courseId">
                <option selected> -- Choose --</option>
                <% course.forEach(course => { %>
                <option value="<%= course.id%> "> <%= course.name %> </option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('partials/footer')  %>